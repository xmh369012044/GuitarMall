<script type="text/javascript">
	var oul = $(".wrap ul");
	var ali = $(".wrap ul li");
	var numLi = $(".wrap ol li");
	var aliLenth = $(".wrap ul li").eq(0).width();
	var aliLenth = ali.eq(0).width();
	var _now = 0;//这个是控制数字样式的计数器
	var _now2 = 0;//这个是控制图片距离的计数器
	var timID = null;
	var aimg = $(".wrap ul img")
	var op = $(".wrap p");

	numLi.click(function() {
		var index = $(this).index();
		_now = index;
		_now2 = index;
		var imgAlt = aimg.eq(_now).attr("alt");
		op.html(imgAlt);
		$(this).addClass("over").siblings().removeClass();
		oul.animate({
			"left" : -aliLenth * index
		}, 4000);
	});

	//slider图片移动函数
	function slider() {
		if (_now == numLi.size() - 1) {
			ali.eq(0).css({
				"position" : "relative",
				"left" : oul.width()
			});
			_now = 0;
		} else {
			_now++
		}

		_now2++;
		numLi.eq(_now).addClass("over").siblings().removeClass();
		var imgAlt = aimg.eq(_now).attr("alt");
		op.html(imgAlt);
		oul.animate({
			"left" : -aliLenth * _now2
		}, 500, function() {
			if (_now == 0) {
				ali.eq(0).css({
					"position" : "static",
				});
				oul.css("left", "0");
				_now2 = 0;
			}
		});
	}

	timID = setInterval(slider, 3000);
	$(".wrap").hover(function() {
		clearInterval(timID);
	}, function() {
		timID = setInterval(slider, 1000)
	});
</script>

